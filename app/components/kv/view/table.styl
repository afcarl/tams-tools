@import './loops'

.kv-container
  float left
  position relative

.kv-table
  table-layout fixed
  border-spacing 5px
  border-collapse separate

  &.style-compact
    pointer-events none
    border-spacing 2px

.kv-cell-atom
  font-family 'Open Sans', sans-serif
  vertical-align middle
  text-align center
  background-color lightgrey
  cursor default
  position relative
  font-size 1.4em
  font-weight 600

  &.style-compact
    text-indent -999px
    padding 0
    font-size 0
    line-height 0
    direction ltr
    white-space nowrap
    overflow hidden
    background-color #c9c9c9

.kv-cell-atom:hover
  background-color #c9c9c9

.kv-cell-atom:active
  background-color #c0c0c0

.kv-mode-dnf
  .kv-cell-atom:not([data-kv-value='true'])
    &:not(.state-error)
      color gray
  .kv-cell-atom[data-kv-value='false']
    font-weight normal
    &.style-compact:not(.state-error)
      background-color #e9e9e9

.kv-mode-knf
  .kv-cell-atom:not([data-kv-value='false'])
    &:not(.state-error)
      color gray
  .kv-cell-atom[data-kv-value='true']
    font-weight normal
    &.style-compact:not(.state-error)
      background-color #e9e9e9

.kv-cell-atom::before
  content attr(data-kv-index)
  position absolute
  right 5%
  top 5%
  color rgba(255,255,255,0.8)
  font-size 0.5em
  z-index 0
  border-radius 2px
  pointer-events none

