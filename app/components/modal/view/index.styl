@import '../../../styles/global'

.modal-container
  display none

  &.state-visible
    display block

.modal-background
  fixed top left
  width 100%
  height 100%
  background-color rgba(40,40,40,0.1)
  pointer-events all
  z-index 1000

.modal-box
  absolute top 10% left 20%
  width 60%
  min-height 50%
  background-color #fff
  z-index 2000
  box-shadow 0 1em 5em rgba(40,40,40,0.5)
  margin-bottom 4em

.modal-box-close
  padding 5px
  absolute top -1.5em right -1.5em
  width 3em
  height 3em
  background-color #333
  border-radius 50%
  border none
  color #fff
  overflow hidden
  direction ltr
  border 3px solid transparent
  outline none

  .icon-shape
    fill white

  &:focus
    border-color #81CAC1
  &:active
    background-color #222
  &:hover
    border-color #333

.modal-box-body
  padding 2em

.modal-box-title
  margin-top 0
  font-weight 600
  font-size 1.5em

.modal-item-titel
  font-weight 600

.modal-item-body
  margin 0.4em 0 1em
