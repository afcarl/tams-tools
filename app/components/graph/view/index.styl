[data-target]
[data-background]
  pointer-events all

.graph-edge-line-background
  pointer-events all
  stroke-linecap round
  stroke-linejoin round

.state-selected
  .graph-node-circle
  .graph-edge-line-background
    stroke-width 20px
    stroke green

.state-transient
  pointer-events none
  .graph-node-circle
  &.graph-edge
    opacity 0.7

[data-action]
  pointer-events all

[data-action="none"]
  pointer-events none
  *
    pointer-events none

