@import '../../../styles/layout'

.app-body
  padding 10px 20px

.comparator
  display flex
  align-items center
  justify-content center
  min-width min-content
  min-height min-content

.compare-selection
  margin 5px
  min-width 10em
  max-width 50%
  &:focus
    outline none

.complete-panel
  padding 0
  float right

.completion-button
  margin 0.2em 0 0.2em 5px
  background-color #7F7F7F
  color #fff
  border none
  border 2px solid transparent
  height 1.8em
  line-height 1
  outline 0
  &:hover
    background-color #8D8D8D
  &:active
    background-color #757575
  &:focus
    border-color color-focus

