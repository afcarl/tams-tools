.switch-container
  overflow hidden
  background-color #333333
  padding 2pt
  display inline-block
  font-size 0.8em
  vertical-align top
  margin 2pt

.switch-button
  min-height 28pt
  width 4.5em
  overflow hidden
  text-overflow ellipsis
  font-size 1em
  padding 0.5em 1em
  display inline-block
  background-color #2a2a2a
  color #aaa
  cursor pointer
  margin 1pt
  border 1pt solid transparent
  outline none
  text-align center
  vertical-align middle

  &:disabled
    opacity 0.3
  &:focus
    border-color #32A7F7
  &:hover
    color #ccc
  &:active
    background-color #252525
  &.state-on
    color #fff
    background-color #222
