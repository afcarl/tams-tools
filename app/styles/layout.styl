@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,600')

font-sans = 'Open Sans', sans-serif
color-dark = #2A2A2A
color-light = #F2F2F2

*
  box-sizing border-box

body
  padding 0
  margin 0
  font-family font-sans

a
button
  cursor pointer

button
input
textarea
select
  font-family inherit
  font-size 1em

.inline-list
  display flex
  display flex
  flex-direction row
  justify-content center
  align-items center
  align-content center
  list-style none
  margin 0
  padding 0

.inline-list-item
  padding 0 4px
  display inline-block

.toolbar
  color color-light
  background-color color-dark
  display flex
  flex-direction row
  justify-content space-between
  align-items center
  align-content center
  padding 5px

.toolbar-item
  flex-basis 25%
  flex-shrink 5

  &.align-right
    text-align right

.toolbar-item-main
  flex-shrink 0

.tabbar
  display flex
  flex-direction row
  justify-content space-between
  align-items stretch
  align-content center

  &.align-center
    justify-content center
  &.align-right
    justify-content flex-end

  &.tabbar-bottom
    padding-bottom 7px
  &.tabbar-top
    padding-top 7px

.tabbar-body
  list-style none
  margin 0
  padding 0
  display flex
  flex-direction row
  justify-content center
  align-items flex-start
  align-content center

.tabbar-lead
.tabbar-trail
  display flex
  flex-direction row
  justify-content center
  align-items center
  align-content center
  padding-bottom 2em

.tabbar-body-group
  background-color #C7C7C7
  padding 0 2px 2px
  border-radius 0 0 7px 7px

.tabbar-group-tab
  border-radius 0 0 5px 5px
  padding 5px 15px
  border none

  &.state-active
    background-color #2A2A2A
    color #fff
    font-weight 600

.tabbar-tab-big
  margin 0 8px
  cursor pointer

  &.state-active
    background-color color-light
    font-weight 600

.tabbar-tab-simple
  display inline-block
  vertical-align middle
  border-radius 5px
  padding 5px 10px
  margin 10px 0
  text-decoration none
  max-width 80px
  text-align center
  line-height 1
  font-size 0.9rem

  &.state-active
    background-color #D9D9D9

.headbar
  background-color #D9D9D9

.button-icon
  display inline-block
  border none
  background-color transparent
  text-indent -500px
  overflow hidden
  width 32px
  height 32px

.button-delete
  border-radius 50%
  background-color #580500
  border 4px solid color-light

.icon-add
  text-indent -500px
  overflow hidden

.button-round
  height 32px
  width 32px
  margin 1px 3px
  border none
  background-color #313131
  color #fff
  border-radius 50%
  padding 0
  text-indent -500px
  overflow hidden
  direction ltr
  display inline-block

.button-mid
  border none
  background-color #313131
  color #fff
  border-radius 5px
  padding 5px
  font-size 10pt
  display inline-block

.button-big
  text-decoration none
  display inline-block
  background-color #BBBBBB
  height 3em
  line-height 1.2
  padding 5px 10px
  margin 5px
  border none
  text-align center
  vertical-align middle

.button-narrow
  max-width 100px

.button-square
  width 3em

.button-light
  background-color color-light

.button-arrow-left
.button-arrow-right
  position relative
  &::after
    position absolute
    display block
    content ''
    border-color transparent
    border-width 1.5em 1.2em
    width 0
    height 0
    overflow hidden
    border-style solid

.button-arrow-left::after
  border-right-color #BBBBBB
  left -2.4em
  margin-left 1px
  top 0
  bottom 0

.button-arrow-right::after
  border-left-color #BBBBBB
  right -2.4em
  margin-right 1px
  top 0
  bottom 0

.thumbnail
  display block
  padding 1px
  position relative
  overflow visible

.thumbnail-action
  position absolute
  right -10px
  top -10px

.thumbnail-body
  width 100px
  height 100px
  margin-bottom 40px
  background-color #D6D6D6
  border 8px solid #F2F2F2
  text-align center
  font-size 0.8rem
  line-height 80px

.thumbnail-label
  position absolute
  bottom 8px
  left 8px
  right 8px
  text-align center

.full-width
  width 100%

.body
  background-color color-light

.well
  display inline-block
  width 32px
  height 32px
  border-radius 4px

.editable-field
  margin 0
  text-rendering auto
  display inline-block
  text-align inherit
  padding 2px
  font-size 1em
  height 1.5em
  line-height 1
  background-color transparent
  border 1px solid transparent
  -webkit-appearance none
  outline none
  font-weight inherit

  &.state-active
    background-color #fff
    border-color #ccc
