@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,600')

font-sans = 'Open Sans', sans-serif
color-dark = #2A2A2A
color-light = #F2F2F2

*
  box-sizing border-box

body
  padding 0
  margin 0
  font-family font-sans
  background-color #F2F2F2

a
button
  cursor pointer

button
input
textarea
select
  font-family inherit
  font-size 1em

.inline-list
  display flex
  flex-direction row
  justify-content flex-start
  align-items center
  align-content flex-start
  flex-wrap wrap
  list-style none
  margin 0
  padding 10px 0 0

  &.vertical
    flex-direction column

.inline-list-item
  padding 4px
  display inline-block

.toolbar
  color color-light
  background-color color-dark
  display flex
  flex-direction row
  justify-content space-between
  align-items stretch
  align-content center
  padding 5px

.overlay-container
  position relative
.overlay-item
  position absolute
  top 0
  left 0
  right 0
  display flex
  flex-direction row
  justify-content center
  align-items stretch
  align-content center
  transition transform 0.3s ease-out,
    opacity 0.3s ease-out

  &:nth-child(2n+1)
    transform-origin: 50% 0;
  &:nth-child(2n)
    transform-origin: 50% 100%;

  &.state-hidden
    transform scale(0)
    opacity 0
    pointer-events none

.tabbar
  display flex
  flex-direction row
  justify-content space-between
  align-items flex-start
  align-content center
  overflow visible
  transition transform 0.3s ease-out
  justify-content center
  margin-left 0
  flex-shrink 0

  &.align-center
    justify-content center
  &.align-right
    justify-content flex-end
  &.align-left
    justify-content flex-start

  &.tabbar-bottom
    padding-bottom 7px
  &.tabbar-top
    padding-top 7px


.tabbar-item
  margin 0
  padding 0

.tabbar-body
  list-style none
  margin 0
  padding 10px 0 0
  display flex
  flex-direction row
  justify-content center
  align-items stretch
  align-content flex-end

.tabbar-body-wrap
  justify-content flex-end
  flex-shrink 2
  flex-grow 0
  flex-wrap wrap

.tabbar-lead
.tabbar-trail
  display flex
  flex-direction row
  justify-content center
  align-items center
  align-content center
  flex-shrink 0
  flex-grow 0
  transition opacity 0.2s 0s ease-out,
    transform 0.2s 0s ease-out
  overflow hidden
  align-self flex-end


  &.state-collapsed
    opacity 0
    pointer-events none
    &.tabbar-lead
      transform translateX(20px)
    &.tabbar-trail
      transform translateX(-20px)

.tabbar-body-group
  background-color #C7C7C7
  padding 0 3px 3px
  border-radius 0 0 8px 8px

.tabbar-group-tab
  background-color inherit
  border-radius 0 0 5px 5px
  margin 0
  padding 5px 15px
  border none
  color #666
  outline none

  &.state-active
    background-color #2A2A2A
    color #fff
    font-weight 600

.tabbar-tab-big
  margin 0 8px
  cursor pointer
  outline none

  &.state-active
    background-color color-light
    font-weight 600

.tabbar-trail-big
  padding 0 0.8em 2.5em

.tabbar-break-vertical
  +below(500px)
    flex-direction column

.tabbar-tab-simple
  color color-dark
  display inline-block
  vertical-align middle
  border-radius 5px
  padding 5px 10px
  margin 10px 0
  text-decoration none
  max-width 80px
  text-align center
  line-height 1
  font-size 0.9rem
  outline none

  &.state-active
    background-color #D9D9D9
    font-weight 600


.tabbar-tab-dark
  color color-dark
  display inline-block
  vertical-align middle
  border-radius 5px
  padding 10px 15px
  margin 10px 0
  text-decoration none
  max-width 80px
  text-align center
  line-height 1
  font-size 0.9rem
  outline none

  &.state-active
    background-color color-dark
    color color-light
    font-weight 600

.headbar
  background-color #D9D9D9

.button-icon
  display inline-block
  border none
  background-color transparent
  text-indent -500px
  overflow hidden
  width 32px
  height 32px
  font-size 0


.button-delete
  border-radius 50%
  background-color #580500
  border 4px solid color-light
  outline none

.icon-add
  text-indent -500px
  overflow hidden

.button-round
  height 32px
  width 32px
  margin 1px 3px
  border none
  background-color #313131
  color #fff
  border-radius 50%
  padding 0
  text-indent -500px
  overflow hidden
  direction ltr
  display inline-block
  outline none
  flex-shrink 0

.button-mid
  border none
  background-color #313131
  color #fff
  border-radius 5px
  padding 5px 10px
  font-size 10pt
  display inline-block
  height 32px
  outline none

.button-big
  color color-dark
  text-decoration none
  display inline-block
  background-color #BBBBBB
  height 3em
  line-height 1.2
  padding 5px 10px
  margin 5px
  border none
  text-align center
  vertical-align middle
  outline none

.button-narrow
  max-width 100px

.button-square
  width 3em
  transition transform 0.3s ease-out, opacity 0.3s ease-in

  &.state-hidden
    transform scale(0.1)
    opacity 0

.button-light
  background-color color-light

.button-arrow-left
.button-arrow-right
  position relative
  margin-left 2.5em
  margin-right 2.5em
  &::after
    position absolute
    display block
    content ''
    border-color transparent
    border-width 1.5em 1.2em
    width 0
    height 0
    overflow hidden
    border-style solid

.button-arrow-left
  margin-right 1.5em
  &::after
    border-right-color #BBBBBB
    left -2.4em
    margin-left 1px
    top 0
    bottom 0

.button-arrow-right
  margin-left 1.5em
  &::after
    border-left-color #BBBBBB
    right -2.4em
    margin-right 1px
    top 0
    bottom 0

.thumbnail
  display block
  padding 1px
  position relative
  overflow visible

.thumbnail-action
  position absolute
  right -10px
  top -10px
  transition transform 0.3s ease-out, opacity 0.3s ease-in

  &.state-hidden
    transform scale(0.1)
    opacity 0

.thumbnail-body
  width 60px
  height 60px
  margin-bottom 40px
  background-color #D6D6D6
  border 6px solid #F2F2F2
  text-align center
  font-size 0.8rem
  line-height 80px
  text-indent -500px
  overflow hidden

.thumbnail-label
  position absolute
  bottom 8px
  left 8px
  right 8px
  text-align center

.full-width
  width 100%

.body
  background-color color-light

.well
  display inline-block
  width 32px
  height 32px
  border-radius 4px

.editable-field
  margin 0
  text-rendering auto
  display inline-block
  text-align inherit
  padding 2px
  font-size 1em
  height 1.5em
  line-height 1
  background-color transparent
  border 1px solid transparent
  -webkit-appearance none
  outline none
  font-weight inherit

  &.state-active
    background-color #fff
    border-color #ccc

.splitter
  padding-top 10px
  display flex
  flex-direction row
  justify-content space-between
  align-items stretch
  align-content flex-start
  overflow hidden

.splitter-item
  flex-grow 1
  flex-shrink 1
  flex-basis 50%
  position relative

  transition flex 0.5s 0s linear

  &.state-closed
    flex-basis 0
    flex-grow 0
    flex-shrink 2
    overflow hidden
    transition-delay -0.2s

.splitter-item-primary
  flex-basis 70%
  flex-grow 1.5
  flex-shrink 0

.scroller
  max-width 100%
  overflow auto

.scroller-body
  display flex
  flex-direction row
  justify-content center
  align-items center
  align-content center
  min-height 50vh

.sidepane
  border 3px solid #C7C7C7
  background-color #D9D9D9
  margin-top 10px
  position absolute
  top 0
  left 0
  bottom 0
  width 100%

.sidepane-head
  background-color #C7C7C7
  padding 5px

.spinner
  display flex
  flex-direction row
  justify-content center
  align-items center
  align-content center

.spinner-value
  min-width 3em
  text-align center

.spring
  padding 0 2em
  display flex
  flex-direction row
  justify-content space-between
  align-items flex-start
  align-content center

.spring-item
  max-width 60%
  display flex
  justify-content flex-start
  align-items flex-start
  align-content flex-start
  flex-direction column
