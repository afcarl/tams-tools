@import 'jeet'
@import 'rupture'
@import 'nib'

@import './settings'

@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,600')

body
  font-family 'Open Sans', sans-serif
  margin 0
  padding 0
  touch-callout none
  user-select none
  cursor default
  background #f9f9f9
  +below(500px)
    background #e9e9e9

*
  box-sizing border-box

button
  cursor pointer

svg
  max-height 100%

img, canvas, svg
  max-width 100%
  height auto

.leftPane
  position absolute
  top 0
  left 0
  height 100%
  width 65%

.rightPane
  position fixed
  top 0
  right 0
  height 100%
  width 35%
  border-left 1px solid #333333
